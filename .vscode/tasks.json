{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run tests in current file",
            "type": "shell",
            "command": "go test -timeout 30s ${workspaceFolderBasename}/${relativeFileDirname}",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make all",
            "type": "shell",
            "command": "make all",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}